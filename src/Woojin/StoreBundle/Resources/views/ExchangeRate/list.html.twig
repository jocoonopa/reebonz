{% verbatim %}
<h1>匯率設定</h1>
<table class="table table-hover">
	<tr>
		<td>名稱</td>
		<td>匯率</td>
		<td>符號</td>
	</tr>

	<tr ng-repeat="exchangeRate in exchangeRates">
		<td ng-if="notTW(exchangeRate.id);">
			<input ng-blur="update(exchangeRate);" ng-model="exchangeRate.name" type="text" />
		</td>

		<td ng-if="notTW(exchangeRate.id);">
			<input jq-numeric ng-blur="update(exchangeRate);" ng-model="exchangeRate.rate" type="text"/>
		</td>
		
		<td ng-if="notTW(exchangeRate.id);">
			<input ng-blur="update(exchangeRate);" ng-model="exchangeRate.symbol" type="text" />
		</td>
	</tr>
</table>
{% endverbatim %}