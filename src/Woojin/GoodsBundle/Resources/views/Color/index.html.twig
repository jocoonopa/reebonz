{% verbatim %}
<div class="row">
	
	<div ng-show="successMsg || errorMsg;" class="msgFix">
		<div ng-if="successMsg;" class="alert alert-success no-margin" role="alert">{{ successMsg }}</div>
		<div ng-if="errorMsg;" class="alert alert-danger no-margin" role="alert">{{ errorMsg }}</div>
	</div>

	<form class="form-inline" role="form">
		<div class="form-group">
		  <div class="input-group">
        <!-- <span class="input-group-addon">$</span> -->
        <input ng-model="query.name" type="text" name="filter" class="form-control input-sm" placeholder="顏色" />
        <span class="input-group-btn">
          <button ng-click="clean(); create(query);" class="btn btn-primary btn-sm" type="button">新增</button>
        </span>
      </div>
  	</div>
	</form>
	
	<p>&nbsp;</p>

	<table class="table table-hover">
		<tr>
			<td ng-click="orderProp='id'; reverse=!reverse;" class="pointer">id</td>
			<td ng-click="orderProp='name'; reverse=!reverse;" class="pointer">顏色</td>
			<td>
				動作
			</td>
		</tr>

		<tr ng-repeat="color in colors | filter:query | orderBy:orderProp:reverse" class="listing">
			<td>{{ color.id }}</td>
			<td><input ng-focus="setTmp(color);" ng-blur="update(color);" ng-model="color.name" type="text" class="input-sm no-border"></td>
			<td>
				<button ng-click="clean(); destroy(color);" class="btn btn-danger btn-sm">刪除</button>
			</td>
		</tr>
	</table>
</div>
{% endverbatim %}