{% verbatim %}
<div class="form-group">
	<label class="col-sm-2 control-label">{{ label }}</label>

	<div class="col-sm-10">
		<label class="radio-inline" ng-repeat="radio in radios">
		  <input ng-model="model[name]" type="radio" name="{{ namePrefix }}{{ name }}{{ goods.id }}" ng-value="radio.value" ng-disabled="disabled">{{ radio.text }}
		</label>
	</div>
</div>
{% endverbatim %}