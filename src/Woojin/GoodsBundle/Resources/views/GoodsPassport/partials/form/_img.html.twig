{% verbatim %}
<div class="form-group">
	<label class="col-sm-2 control-label">{{label}}</label>

	<div class="col-sm-10">
		<input type="file" class="hidden" name="{{prefix}}{{model.id}}" ng-file-select="select($files, type, model);" />
  	
  	<button type="button" class="btn btn-default" ng-click="click(model);">
  		<span class="glyphicon glyphicon-floppy-remove"></span>取消
  	</button>	
  	
  	<button my-file-input type="button" class="btn btn-primary">
  		<span class="glyphicon glyphicon-folder-open"></span>&nbsp;選取
  	</button>

  	<br/><br/>
		
		<img ng-show="model[name]" ng-src="{{model[name]}}" width="320" height="240" />
	</div>
</div>
{% endverbatim %}