{% verbatim %}
<div class="form-group">
	<label class="col-sm-2 control-label">{{ label }}</label>

	<div class="col-sm-10">
		<select name="{{ name }}" class="form-control" 
			ng-model="model[name].id" 
			ng-options="entity.id as entity.name for entity in entitys"
		></select>
	</div>
</div>
{% endverbatim %}