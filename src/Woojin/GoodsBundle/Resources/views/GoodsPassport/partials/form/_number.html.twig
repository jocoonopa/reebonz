{% verbatim %}
<div class="form-group">
	<label class="col-sm-2 control-label">{{ label }}</label>

	<div class="col-sm-10">
		<input type="text" name="{{ name }}" class="form-control" 
			ng-model="model[name]"
			isRequired="isRequired" 
			isPrice="isPrice" 
			ng-change="change();"
		/>
	</div>
</div>
{% endverbatim %}