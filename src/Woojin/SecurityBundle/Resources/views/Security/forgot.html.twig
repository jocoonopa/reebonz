<!DOCTYPE html>
<html lang="zh-TW">
<head>
  <meta charset="utf-8" />
  <title>Reebonz密碼取回</title>
  <link rel="stylesheet" href="/bundles/woojinbackend/css/bootstrap.yeti.min.css">
  <script src="/js/reebonz.js"></script>
</head>
<body>

<div class="modal" style="display: block !important;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
    
        <h4 class="modal-title">Reebonz密碼取回</h4>
      </div>
      <div class="modal-body">
        {% if error %}
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <strong>{{ error }}</strong>
        </div>
        {% endif %}

        {% if success %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <strong>{{ success }}</strong>
        </div>
        {% endif %}

        <form action="{{ path('forgotten') }}" role="form" method="post" >
          <div class="form-group">
            <label for="email">信箱</label>
            <input type="email" id="email" class="form-control" name="email" value="{{ last_email }}" placeholder="請輸入信箱" />
          </div>
        </form>
      </div>
    
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">確認</button>
      </div>
    </div>
  </div>
</div>
<script>
$(function () {
  $('.modal-footer button').click(function () {
    if ($('#email').val().length < 1) {
        alert('請輸入信箱');

        return false;
    }

    $('form').submit();
  });
});
</script>
</body>
</html>